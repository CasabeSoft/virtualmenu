{
    "name": "casabesoft/virtualmenu",
    "description": "VirtualMenu is a catering menu managment system",
    "type": "project",
    "require-dev": {
        "phpdocumentor/phpdocumentor": "^2.9",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "license": "MIT",
    "require": {},
    "scripts": {
      "php-validate": "vendor/bin/phpcs --standard=PSR2 -p --colors --report=summary --ignore=*/libraries/*,*/third_party/*,*/errors/* www/application/",
      "php-validate-full": "vendor/bin/phpcs --standard=PSR2 -p --colors --report=full --ignore=*/libraries/*,*/third_party/*,*/errors/* www/application/"
    }
}

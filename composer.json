{
    "name": "casabesoft/virtualmenu",
    "description": "VirtualMenu is a catering menu managment system",
    "type": "project",
    "require-dev": {
        "phpdocumentor/phpdocumentor": "^2.9",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "license": "MIT",
    "require": {},
    "scripts": {
      "php-lint": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit 1",
      "php-lint-summary": "vendor/bin/phpcs --report=summary --runtime-set ignore_warnings_on_exit 1",
      "php-lint-full": "vendor/bin/phpcs --report=full --runtime-set ignore_warnings_on_exit 1"
    }
}

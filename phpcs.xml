<?xml version="1.0"?>
<ruleset name="VirtualMenu">
  <description>The coding standard for VirtualMenu</description>

  <file>./www/index.php</file>
  <file>./www/application/</file>

  <exclude-pattern>*/libraries/*</exclude-pattern>
  <exclude-pattern>*/third_party/*</exclude-pattern>
  <exclude-pattern>*/errors/*</exclude-pattern>
  <exclude-pattern>./www/application/models/grocery_crud_model.php</exclude-pattern>

  <rule ref="PSR2">
    <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine" />
    <exclude name="Generic.WhiteSpace.DisallowTabIndent" />
    <exclude name="Generic.Files.LineEndings" />
  </rule>

  <!-- FORMATING IMPROVEMENTS RULES START -->
  <rule ref="PSR2.Classes.ClassDeclaration.OpenBraceNewLine">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Files.ClosingTag.NotAllowed">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Methods.FunctionCallSignature.ContentAfterOpenBracket">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Methods.FunctionCallSignature.Indent">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Methods.FunctionCallSignature.CloseBracketLine">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Methods.FunctionCallSignature.SpaceBeforeCloseBracket">
    <type>warning</type>
  </rule>
  <rule ref="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseParenthesis">
    <type>warning</type>
  </rule>
  <rule ref="Generic.WhiteSpace.ScopeIndent.IncorrectExact">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Files.EndFileNewline.NoneFound">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBracket">
    <type>warning</type>
  </rule>
  <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EndLine">
    <type>warning</type>
  </rule>
  <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterOpen">
    <type>warning</type>
  </rule>
  <rule ref="Squiz.WhiteSpace.ScopeClosingBrace.Indent">
    <type>warning</type>
  </rule>
  <rule ref="Squiz.Functions.MultiLineFunctionDeclaration.ContentAfterBrace">
    <type>warning</type>
  </rule>
  <!-- FORMATING IMPROVEMENTS RULES START -->

  <!-- NAMING CONVENTION RULES START -->
  <rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
    <type>warning</type>
  </rule>
  <rule ref="Generic.PHP.LowerCaseKeyword.Found">
    <type>warning</type>
  </rule>
  <!-- NAMING CONVENTION RULES END -->

  <!-- REFACTOR REQUIRED RULES START -->
  <!-- TODO: Refactor code to restore the error level for this rules -->
  <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
    <type>warning</type>
  </rule>
  <rule ref="Generic.PHP.LowerCaseConstant.Found">
    <type>warning</type>
  </rule>
  <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
    <type>warning</type>
  </rule>
  <!-- REFACTOR REQUIRED RULES END -->

  <!-- FIXES REQUIRED RULES START -->
  <!-- TODO: Fix ASAP tto restore the error level for this rules -->
  <rule ref="Generic.ControlStructures.InlineControlStructure.NotAllowed">
    <type>warning</type>
  </rule>
  <rule ref="Squiz.Scope.MethodScope.Missing">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Classes.PropertyDeclaration.ScopeMissing">
    <type>warning</type>
  </rule>
  <rule ref="PSR2.Classes.PropertyDeclaration.VarUsed">
    <type>warning</type>
  </rule>
  <!-- FIXES REQUIRED RULES END -->
</ruleset>
